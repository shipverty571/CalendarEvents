<UserControl
    x:Class="View.Controls.CalendarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:View.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="clr-namespace:View.Converters"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:IntToMonthConverter x:Key="IntToMonthConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button
                Width="50px"
                Height="25px"
                Margin="3px"
                Command="{Binding SelectNextMonth}"
                Content="Next"/>
            <Button
                Width="50px"
                Height="25px"
                Margin="3px"
                Command="{Binding SelectPrevMonth}"
                Content="Prev"/>
            <TextBlock
                Margin="3px"
                VerticalAlignment="Center"
                Text="{Binding CurrentDate.Month, Converter={StaticResource IntToMonthConverter}}"/>
            <TextBlock
                Margin="3px"
                VerticalAlignment="Center"
                Text="{Binding CurrentDate.Year}"/>
        </StackPanel>
        <ItemsControl Grid.Row="1" ItemsSource="{Binding MonthDays}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="7" Rows="6"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Padding="0">
                        <Button.Template>
                            <ControlTemplate>
                                <Grid
                                    Margin="0"
                                    Background="Aqua"
                                    Visibility="{Binding IsDateOfMonth, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Margin="3px"
                                        Text="{Binding CalendarDay.Date.Day}"/>
                                    <StackPanel Grid.Row="2">
                                        <TextBlock Margin="3px" Text="Мероприятия: "/>
                                        <TextBlock Margin="3px" Text="Задачи: "/>
                                    </StackPanel>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
